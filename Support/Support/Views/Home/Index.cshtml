@{
    Layout = "_Matrix";
}

<style>
    .social-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 10;
        pointer-events: none;
    }

    .social-icons {
        display: flex;
        gap: 40px;
        padding: 30px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 25px;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        pointer-events: all;
    }

    .social-icon {
        width: 80px;
        height: 80px;
        display: flex;
        justify-content: center;
        align-items: center;
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.05));
        border-radius: 20px;
        color: #fff;
        font-size: 35px;
        text-decoration: none;
        transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
        border: 2px solid rgba(255, 255, 255, 0.2);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        position: relative;
        cursor: pointer;
    }

        .social-icon:hover {
            transform: scale(1.5) translateY(-10px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.4);
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.2), rgba(255, 255, 255, 0.1));
            border-color: rgba(255, 255, 255, 0.4);
        }

        .social-icon:nth-child(1):hover {
            color: #ea4335;
        }

        .social-icon:nth-child(2):hover {
            color: #0088cc;
        }

    /* Animation for nearby icons */
    .social-icons:has(.social-icon:nth-child(1):hover) .social-icon:nth-child(2) {
        transform: scale(0.85) translateX(15px);
    }

    .social-icons:has(.social-icon:nth-child(2):hover) .social-icon:nth-child(1) {
        transform: scale(0.85) translateX(-15px);
    }
</style>

<!-- Social Icons Container -->
<div class="social-container">
    <div class="social-icons">
        <a href="/Email" class="social-icon" title="تماس با حامد موقری" target="_blank">
            <i class="fas fa-envelope"></i>
        </a>
        <a href="https://t.me/HMSupportRobot" class="social-icon" title="تماس با حامد موقری" target="_blank">
            <i class="fab fa-telegram"></i>
        </a>
    </div>
</div>